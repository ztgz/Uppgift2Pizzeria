@model CreatePizzaViewModel

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

        <form method="post" asp-action="EditPizza">
            <input type="hidden" asp-for="Meal.MatrattId" value="@Model.Meal.MatrattId"/>

            <div asp-validation-summary="All" class="alert-dark"></div>
            <div class="form-group">
                <label asp-for="Meal.MatrattNamn"></label>
                <input asp-for="Meal.MatrattNamn" class="form-control"/>
                <span asp-validation-for="Meal.MatrattNamn" class="alert-dark"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meal.Pris"></label>
                <input asp-for="Meal.Pris" class="form-control"/>
                <span asp-validation-for="Meal.Pris" class="alert-dark"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meal.MatrattTyp"></label>
                <select asp-for="Meal.MatrattTyp" asp-items="@Model.FoodTypes" class="form-control"></select>
            </div>

            <div class="form-group">
                <label>Ingridienser</label>
                <select asp-for="SelectedIngridients" asp-items="@Model.Products" multiple="multiple" class="form-control"></select>
            </div>


            <div class="text-right">
                <a class="btn btn-dark mr-1" asp-controller="Resturant" asp-action="Menu">Avbryt</a>
                <button type="submit" class="btn btn-light">Spara Maträtt</button>
            </div>
        </form>
        
    </div>
</div>