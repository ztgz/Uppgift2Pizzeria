@model UserViewModel

<div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
        <form method="post" asp-action="Login">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
            <div asp-validation-summary="All" class="mt-1 alert-dark"></div>
            <div class="form-group">
                <label asp-for="AnvandarNamn"></label>
                <input asp-for="AnvandarNamn" class="form-control"/>
                <span asp-validation-for="AnvandarNamn" class="alert-dark"></span>
            </div>
            <div class="form-group">
                <label asp-for="Losenord"></label>
                <input asp-for="Losenord" class="form-control"/>
                <span asp-validation-for="Losenord" class="alert-dark"></span>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-light">Logga in</button>
            </div>
        </form>

        <br /> <br /> <hr />

        <div class="text-center">
            <a class="btn btn-warning" asp-action="Create">Skapa ny användare</a>
        </div>
    </div>
</div>